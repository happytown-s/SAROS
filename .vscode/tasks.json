{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run SAROS in Terminal",
            "type": "shell",
            "command": "${workspaceFolder}/build/SAROSApp/SAROS.app/Contents/MacOS/SAROS",
            "problemMatcher": [],
            "dependsOn": "CMake: build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}